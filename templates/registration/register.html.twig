{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
    <section class="container my-3">
        <div class="row">
            <div class="col-3"></div>
            <div class="col-6 bg-warning rounded py-4">
                <h1>Inscription</h1>

                {{ form_start(registrationForm) }}
                    <fieldset class="mb-3">
                        <legend>Données d'identification</legend>
                        {{ form_row(registrationForm.login) }}
                        {{ form_row(registrationForm.nom) }}
                        {{ form_row(registrationForm.prenom) }}
                    </fieldset>
                    <fieldset class="mb-3">
                        <legend>Coordonnées</legend>
                        {{ form_row(registrationForm.adresse) }}
                        {{ form_row(registrationForm.email) }}
                        {{ form_row(registrationForm.telephone) }}
                    </fieldset>
                    {{ form_row(registrationForm.plainPassword, {
                        label: 'Mot de passe'
                    }) }}
                    {{ form_row(registrationForm.RGPDConsent) }}

                    <a href="{{ path('app_login') }}" class="btn btn-secondary btn-lg my-3">Annuler</a>
                    <button type="submit" class="btn btn-primary btn-lg my-3">S'inscrire</button>
                {{ form_end(registrationForm) }}            
            </div>
        </div>
    </section>

{% endblock %}
