    {% set link_prev = 'app_installation_add' %}
    {% if curr_etat > 2 %}
        {% set prev_etat = curr_etat - 1 %}
        {% set link_prev = 'app_installation_add' ~ prev_etat %}
    {% endif %}
    <div class="row">
        <div class="col-6">
                <button type="button" onclick="$('#form_installation_del').submit()" class="next action-button btn btn-outline-danger btn my-3">Supprimer la demande</button>
                <a href="{{ path('app_installation_index', {'id': installation.id}) }}" class="next action-button btn btn-outline-warning btn my-3">Enregistrer et sortir</a>
        </div>
        <div class="col-6" align="right">
            <a href="{{ path(link_prev , {'id': installation.id}) }}" class="next action-button btn btn-secondary btn my-3">Etape Précédente</a>
            {% if curr_etat == "6" %}
                <button type="submit" class="next action-button btn btn-primary btn my-3">Soumettre la demande</button>
            {% else %}
                <button type="submit" class="next action-button btn btn-primary btn my-3">Etape Suivante</button>
            {% endif %}
        </div>
    </div>