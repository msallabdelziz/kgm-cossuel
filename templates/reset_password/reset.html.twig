    <section class="container my-3">
        <div class="row">
            <div class="col-4"></div>
            <div class="col-4 bg-warning rounded py-4">
                {{ form_start(resetForm) }}
                    {{ form_row(resetForm.plainPassword) }}
                    <button class="btn btn-primary">Réinitialiser le mot de passe</button>
                {{ form_end(resetForm) }}
            </div>
        </div>
    </div>
{% endblock %}
